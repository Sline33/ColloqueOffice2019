{% extends 'base.html.twig' %}

{% block body %}
{% if app.session.flashBag.has('espaceClient') %}
    <div class="d-flex justify-content-center">
        {% for msg in app.session.flashBag.get('espaceClient') %}
            <p class="alert alert-danger">{{ msg }}</p>
        {% endfor %}
    </div>
{% endif %}
<div class="container" style="width:700px;">
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            {{ form_widget(form._token) }}
                <div id="appbundle_customer">
                    <div class="d-flex" style="margin-bottom:8px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="appbundle_customer_sexe1" name="appbundle_customer[sexe]" value="1">
                            <label class="form-check-label" for="formCheck-1" style="padding-right:11px;">Mr</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="appbundle_customer_sexe2" name="appbundle_customer[sexe]" value="0">
                            <label class="form-check-label" for="formCheck-2">Mme</label>
                        </div>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_lastname" class="form-control-label required">Nom</label>
                            <input type="text" pattern="[a-zA-Z]{1,}" id="appbundle_customer_lastname" name="appbundle_customer[lastname]" required="required" maxlength="255" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_firstname" class="form-control-label required">Prénom</label>
                            <input type="text" pattern="[a-zA-Z]{1,}" id="appbundle_customer_firstname" name="appbundle_customer[firstname]" required="required" maxlength="255" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_society" class="form-control-label required">Société</label>
                            <input type="text" id="appbundle_customer_society" name="appbundle_customer[society]" required="required" maxlength="255" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_adress" class="form-control-label required">Adresse</label>
                            <input type="text" id="appbundle_customer_adress" name="appbundle_customer[adress]" required="required" maxlength="255" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_cp" class="form-control-label required">Code Postale</label>
                            <input type="text" pattern="[0-9]{5}" id="appbundle_customer_cp" name="appbundle_customer[cp]" required="required" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_town" class="form-control-label required">Ville</label>
                            <input type="text" id="appbundle_customer_town" name="appbundle_customer[town]" required="required" maxlength="255" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="appbundle_customer_phonenumber" class="form-control-label required">Numéro de téléphone</label>
                            <input type="tel" pattern="[0-9]{10}" id="appbundle_customer_phonenumber" name="appbundle_customer[phonenumber]" required="required" class="form-control"/>
                        </div>
                        <input class="btn btn-primary float-right" style="margin-top:30px;width:180px;" type="submit" value="Create"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}